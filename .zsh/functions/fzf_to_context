# Use arrow keys to navigate
# Press TAB to select multiple files
# Press Enter when done
# Or provide file paths directly: fzf_to_context file1 file2 ...
fzf_to_context() {
  # If arguments provided, use them directly
  if [ $# -gt 0 ]; then
    selected_files=$(printf '%s\n' "$@")
  else
    # Interactive selection
    selected_files=$(
      if [ -f .gitignore ]; then
        git ls-files --cached --others --exclude-standard
      else
        find . -type f -not -path "*/\.*"
      fi | fzf --multi --bind='alt-a:select-all' --preview 'bat --color=always --style=numbers --line-range=:500 {}'
    )
  fi

  # Exit if no files selected
  [ -z "$selected_files" ] && return

  # Create a temporary file to store the formatted content
  temp_file=$(mktemp)

  # Process each selected file
  echo "$selected_files" | while read -r file; do
    echo "<file path='$file'>" >> "$temp_file"
    echo "" >> "$temp_file"
    cat "$file" >> "$temp_file"
    echo "" >> "$temp_file"
    echo "</file>" >> "$temp_file"
    echo "" >> "$temp_file"
  done

  # Copy to clipboard
  if command -v pbcopy > /dev/null; then
    cat "$temp_file" | pbcopy
  elif command -v xclip > /dev/null; then
    cat "$temp_file" | xclip -selection clipboard
  elif command -v wl-copy > /dev/null; then
    cat "$temp_file" | wl-copy
  else
    echo "No clipboard command found"
  fi

  echo "âœ¨ Files copied to clipboard for AI chat context"
  rm "$temp_file"
}
